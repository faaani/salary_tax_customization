<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="hr_payroll_extended.hr_salary_rule_form_view_inherited" model="ir.ui.view">
            <field name="name">HR Salary Rule Inherited</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_details']" position="inside">
                    <field name="exempt_from_tax"/>
                    <field name="is_income_tax_rule"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>